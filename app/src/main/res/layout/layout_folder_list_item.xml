<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="100"
    android:gravity="center_vertical"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp"
    android:background="@color/colorPrimary">

    <View
        android:id="@+id/right_line"
        android:layout_width="2dp"
        android:layout_height="60dp"
        android:background="@color/tealDark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_folder_dark_64"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/right_line"/>

    <TextView
        android:id="@+id/folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/folder_name"
        android:textColor="@color/black_second"
        android:textSize="14dp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/notes_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notes_count"
        android:textColor="@color/black_second"
        android:textSize="14dp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/folder_name"
        android:layout_marginStart="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>








